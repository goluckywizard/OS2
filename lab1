#include <stdlib.h>
#include <errno.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/wait.h>
#include <stdio.h>
#include <pthread.h>
#include <thread.h>

void *print(char *arg) {
        int i = 0;
        for (i = 0; i < 10; ++i)
                printf("%s\n", arg);
        return (void*)0;
}

int main(void) {
        pthread_t thread;
        char child[8] = "child";
        char parent[8] = "parent";
        //printf("parent\n");
        if (pthread_create(&thread, NULL, print, child) != 0) {
                fprintf(stderr, "Unable to create thread!");
                exit(EXIT_FAILURE);
        }
        print(parent);
        sleep(10);
        return EXIT_SUCCESS;
}
